<%= scrivito_details_for 'Title of Event to overwrite Title from CRM if needed' do %>
  <%= scrivito_tag(:div, widget, :overwrite_title) %>
<% end %>

<%= scrivito_details_for 'Event ID from CRM' do %>
  <%= scrivito_toggle_button_editor widget, :event_id, CrmFormWidget.events do |event|
    scrivito_tag(:button, widget, :event, data: {editor: 'scrivito-toggle-button', content: event.id}) do
      event.title
    end
  end %>
<% end %>
